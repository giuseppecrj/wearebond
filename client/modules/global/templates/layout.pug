- const locals = htmlWebpackPlugin.options

doctype html
html(lang='en')
  head      
    title= locals.title
    base(href='/')

    // General META
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

    // Responsive META
    meta(name='viewport' content='width=device-width,initial-scale=1,maximum-scale=1')

    // Apple META
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='apple-mobile-web-app-status-bar-style' content='black')

    // SEO META
    meta(name="fragment" content="!")

    // Fav Icon
    link(rel='icon', href=locals.CDN('/favicon.png', true))

    // Application CSS Files
    if locals.__env.name !== 'development'
      link(rel='stylesheet', href=locals.CDN('/stylesheets/main.css', true))

    // Modernizr Always Load After CSS
    script(type='text/javascript', src=locals.CDN('/javascripts/modernizr.js', true))


    // HTML5 Shim
    <!--[if lt IE 9]>
    script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    <![endif]-->

    // Load The Typekit Script

  body
    block content

    // Application Javascript Files
    if locals.__env.name === 'development'
      script(src="/javascripts/main.js")
    else
      script(src=locals.CDN('/javascripts/vendor.js', true))
      script(src=locals.CDN('/javascripts/main.js', true))

